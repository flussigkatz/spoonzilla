<resources>
    <!-- Base application theme. -->
    <style name="Theme.Spoonzilla" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_color_1</item>
        <item name="colorPrimaryVariant">@color/app_color_2</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_color_3</item>
        <item name="colorSecondaryVariant">@color/app_color_5</item>
        <item name="colorOnSecondary">@color/app_color_4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/light_grey</item>
    </style>
</resources>