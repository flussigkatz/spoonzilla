<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.ProfileFragment">

    <ImageView
        android:id="@+id/profile_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_cheaf"
        android:background="@color/white"
        android:contentDescription="@string/profile_avatar_description" />

    <TextView
        android:id="@+id/profile_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/profile_avatar" />

    <Button
        android:id="@+id/profile_create_new"
        android:layout_width="@dimen/profile_create_new_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_sign"
        android:layout_centerHorizontal="true"
        android:text="@string/profile_create_new_text" />

    <Button
        android:id="@+id/profile_sign"
        android:layout_width="@dimen/profile_sign_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_avatar"
        android:layout_centerHorizontal="true"
        android:text="@string/profile_sign_sign_in" />

</RelativeLayout>