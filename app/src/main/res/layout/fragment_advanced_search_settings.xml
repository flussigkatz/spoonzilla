<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.AdvancedSearchSettingsFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/advanced_search_view"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:iconifiedByDefault="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/cuisine_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:text="@string/cuisine_switch_description"
        app:layout_constraintTop_toBottomOf="@id/advanced_search_view"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/include_cuisine_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/include_cuisine_button_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cuisine_switch"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/exclude_cuisine_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exclude_cuisine_button_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_cuisine_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>